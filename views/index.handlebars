
<div class="row">
    <div class="center col-sm-12">
         <img src="../public/assets/img/burger.png.png">
       <h1>Eat Da Burgers!</h1>
    </div>
</div>

<div class="row">
    <div class="col-sm-6">

    <ul>
        {{#each burgers}}
        {{#unless this.devoured}}
    <li>
            {{this.id}}
            {{this.burger_name}}

        <form action="/{{this.id}}" method="POST">
            <input type="hidden" name="devoured" value="true">
            <button class="btn-primary" type="submit"> Devour It!</button>
        </form>

    </li>
        {{/unless}}
        {{/each}}
    </ul>
    </div>

    <div class="col-sm-6">
        <ul>
        {{#each burgers}}
        {{#if this.devoured}}
            <li>
                {{this.id}}
                {{this.burger_name}}
            </li>
        {{/if}}
        {{/each}}
        </ul>
    </div>
 </div>

<div class="row">
    <div class="col-sm-12">
        <h3>Add a Burger</h3>
        <form class="submitForm" action="/" method="POST">
    <div>
        <label for="bname">Burger Name:</label>
        <input type="text" id="bname" name="burger_name">
    </div>
        <button class= "btn-primary" type="submit">Add Burger</button>
</form>
</div>
</div>
</div>